# Bacalhau Compute Node Configuration Example
# Copy this to bacalhau-config.yaml and update with your orchestrator details

API:
  Host: 147.135.16.87     # Your orchestrator IP
  Port: 1234              # API port
  TLS:
    UseTLS: true
    Insecure: false

# Compute node configuration
Compute:
  Enabled: true
  Orchestrators:
    - nats://147.135.16.87:4222    # NATS endpoint for your orchestrator
  Auth:
    Token: your-auth-token-here    # Replace with your cluster auth token
  
  # Resources this node offers (empty means use all available)
  Resources:
    CPU: ""      
    Memory: ""   
    Disk: ""     
    GPU: ""      

# Engines to enable
Engines:
  Types:
    - docker
    - wasm
  
  Docker:
    ManifestCache:
      Size: 1000
      Duration: 1h

# Name provider - generates unique node names
NameProvider: puuid

# Logging
Logging:
  Level: info
  Mode: default

# Update configuration
UpdateConfig:
  Interval: 24h

# Disable telemetry
DisableAnalytics: true